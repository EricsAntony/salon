# PAYMENT SERVICE - STAGE ENVIRONMENT
# Copy these environment variables to your Render payment-service-stage settings

# =============================================================================
# CORE SERVICE CONFIGURATION
# =============================================================================
PORT=8083
PAYMENT_SERVICE_ENV=stage
PAYMENT_SERVICE_SERVER_PORT=8083

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Note: PAYMENT_SERVICE_DB_URL is auto-provided by Render from salon-db-stage
# Format: postgres://username:password@host:port/database

# =============================================================================
# STRIPE CONFIGURATION (STAGING/TEST)
# =============================================================================
# Use Stripe test keys for staging
PAYMENT_SERVICE_STRIPE_SECRET_KEY=sk_test_your_stripe_staging_secret_key_here
PAYMENT_SERVICE_STRIPE_WEBHOOK_SECRET=whsec_your_stripe_staging_webhook_secret_here

# =============================================================================
# RAZORPAY CONFIGURATION (STAGING/TEST)
# =============================================================================
# Use Razorpay test keys for staging
PAYMENT_SERVICE_RAZORPAY_KEY_ID=rzp_test_your_razorpay_staging_key_id_here
PAYMENT_SERVICE_RAZORPAY_KEY_SECRET=your_razorpay_staging_key_secret_here
PAYMENT_SERVICE_RAZORPAY_WEBHOOK_SECRET=your_razorpay_staging_webhook_secret_here

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level for staging (info for performance testing)
PAYMENT_SERVICE_LOG_LEVEL=info
PAYMENT_SERVICE_LOG_SERVICENAME=payment-service-stage

# =============================================================================
# STAGING NOTES
# =============================================================================
# - Use TEST/SANDBOX credentials for all payment gateways
# - Stripe test keys start with 'sk_test_' and 'pk_test_'
# - Razorpay test keys start with 'rzp_test_'
# - Info level logging for performance testing
# - Test payment flows thoroughly before promoting to production
# - All webhook secrets should be configured in respective payment gateway dashboards
# - Database URL is automatically provided by Render
