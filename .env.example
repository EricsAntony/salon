# Salon Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DB_USER=postgres
DB_PASSWORD=postgres
USER_DB_URL=postgres://postgres:postgres@postgres:5432/salon?sslmode=disable
SALON_DB_URL=postgres://postgres:postgres@postgres:5432/salon?sslmode=disable
BOOKING_DB_URL=postgres://postgres:postgres@postgres:5432/salon?sslmode=disable
PAYMENT_DB_URL=postgres://postgres:postgres@postgres:5432/salon?sslmode=disable
NOTIFICATION_DB_URL=postgres://postgres:postgres@postgres:5432/salon?sslmode=disable

# JWT Configuration (Generate secure random strings for production)
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production

# Payment Gateway Configuration
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (SMTP)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@salon.local

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890

# Push Notification Configuration (Firebase)
FCM_SERVER_KEY=your_fcm_server_key
FCM_PROJECT_ID=your_fcm_project_id

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Development Tools
# MailHog Web UI: http://localhost:8025
# Adminer Database UI: http://localhost:8090
# Redis Commander: http://localhost:8081 (if enabled)

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://user-service:8080
SALON_SERVICE_URL=http://salon-service:8081
BOOKING_SERVICE_URL=http://booking-service:8082
PAYMENT_SERVICE_URL=http://payment-service:8083
NOTIFICATION_SERVICE_URL=http://notification-service:8084

# Environment
NODE_ENV=development
GO_ENV=development
