# NOTIFICATION SERVICE - PRODUCTION ENVIRONMENT
# Copy these environment variables to your Render notification-service-prod settings

# =============================================================================
# CORE SERVICE CONFIGURATION
# =============================================================================
PORT=8084
NOTIFICATION_SERVICE_ENV=prod
NOTIFICATION_SERVICE_SERVER_PORT=8084

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Note: NOTIFICATION_SERVICE_DB_URL is auto-provided by Render from salon-db-prod
# Format: postgres://username:password@host:port/database

# =============================================================================
# SMTP CONFIGURATION (EMAIL)
# =============================================================================
# ⚠️ CRITICAL: Use production SMTP server
NOTIFICATION_SERVICE_SMTP_HOST=smtp.production-provider.com
NOTIFICATION_SERVICE_SMTP_PORT=587
NOTIFICATION_SERVICE_SMTP_USERNAME=your_production_smtp_username
NOTIFICATION_SERVICE_SMTP_PASSWORD=your_production_smtp_password
NOTIFICATION_SERVICE_SMTP_FROM=noreply@salon.com

# =============================================================================
# TWILIO CONFIGURATION (SMS)
# =============================================================================
# ⚠️ CRITICAL: Use LIVE Twilio credentials for production
NOTIFICATION_SERVICE_TWILIO_ACCOUNT_SID=your_twilio_live_account_sid_here
NOTIFICATION_SERVICE_TWILIO_AUTH_TOKEN=your_twilio_live_auth_token_here
NOTIFICATION_SERVICE_TWILIO_FROM=+1234567890

# =============================================================================
# FIREBASE CLOUD MESSAGING (PUSH NOTIFICATIONS)
# =============================================================================
# ⚠️ CRITICAL: Use production FCM project credentials
NOTIFICATION_SERVICE_FCM_SERVER_KEY=your_fcm_production_server_key_here
NOTIFICATION_SERVICE_FCM_PROJECT_ID=your_fcm_production_project_id_here

# =============================================================================
# SENDGRID CONFIGURATION (ALTERNATIVE EMAIL)
# =============================================================================
# Optional: Use SendGrid as alternative email provider (LIVE)
NOTIFICATION_SERVICE_SENDGRID_API_KEY=your_sendgrid_live_api_key_here

# =============================================================================
# AWS SNS CONFIGURATION (ALTERNATIVE SMS)
# =============================================================================
# Optional: Use AWS SNS as alternative SMS provider (LIVE)
NOTIFICATION_SERVICE_AWS_SNS_ACCESS_KEY=your_aws_production_access_key_here
NOTIFICATION_SERVICE_AWS_SNS_SECRET_KEY=your_aws_production_secret_key_here
NOTIFICATION_SERVICE_AWS_SNS_REGION=us-east-1

# =============================================================================
# REDIS CONFIGURATION (MESSAGE QUEUING)
# =============================================================================
# Redis for message queuing (production instance)
NOTIFICATION_SERVICE_REDIS_HOST=redis-production.example.com
NOTIFICATION_SERVICE_REDIS_PORT=6379
NOTIFICATION_SERVICE_REDIS_PASSWORD=your_redis_production_password
NOTIFICATION_SERVICE_REDIS_DB=0

# =============================================================================
# RABBITMQ CONFIGURATION (ALTERNATIVE MESSAGE QUEUE)
# =============================================================================
# Optional: RabbitMQ for advanced message queuing (production instance)
NOTIFICATION_SERVICE_RABBITMQ_URL=amqp://prod_user:prod_password@rabbitmq-production.example.com:5672/

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level for production (warn to minimize sensitive data exposure)
NOTIFICATION_SERVICE_LOG_LEVEL=warn
NOTIFICATION_SERVICE_LOG_SERVICENAME=notification-service-prod

# =============================================================================
# PRODUCTION SECURITY NOTES
# =============================================================================
# ⚠️ CRITICAL SECURITY REQUIREMENTS:
# - Use LIVE/PRODUCTION credentials for all external services
# - Use warn/error level logging to minimize sensitive data exposure
# - Regularly rotate all secrets and API keys
# - Monitor notification delivery and logs for security incidents
# - Use production-grade external service endpoints
# - Enable SSL/TLS for all external connections
# - Implement proper backup and disaster recovery procedures
# - Database URL is automatically provided by Render
